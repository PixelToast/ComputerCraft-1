-- CraftOS+ Install Program
latest = false
if latest == true then
 local installLocation = "https://raw.github.com/Sirharry0077/ComputerCraft/master/latest/programs/installer"
else
 local installLocation = "https://raw.github.com/Sirharry0077/ComputerCraft/master/recommended/programs/installer"
end

local function fetchFile()
 http.request(installLocation)
 local requesting = true
 while requesting do
  local event, url, sourceText = os.pullEvent()
  if event == "http_success" then
   local respondedText = sourceText.readAll()
   requesting = false
   local download = http.get(installLocation)
   local text = download.readAll()
   download.close()
   file = fs.open("installer", "w")
   file.write(text)
   file.close()
   success = true
  elseif event == "http_failure" then
   print("Server didn't respond.")
   requesting = false
  end
 end
end

rednet.open("top")
shell.run("clear")
print("Install")
print("-------")

fetchFile()
if success == true then
 shell.run("installer")
 fs.delete("installer")
 os.reboot()
else
 print("Please Try Again")
end
